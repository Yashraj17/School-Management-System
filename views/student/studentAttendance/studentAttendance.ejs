
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('../side') %>
        </div>
        <div class="col-10">
            
         
            <div class="row mb-3">
              <div class="col-6">
                <h4 class="mt-3 border-start border-4 px-2">Payment Details </h4>
              </div>
              
              <div class="col-6">
                <div class="btn-group float-end" role="group" aria-label="Basic example">
                  <!-- <a href="/student/payment-paid" class="btn btn-primary text-white float-end mt-3">Paid</a>
                  <a href="/student/payment-all" class="btn btn-warning text-white float-end mt-3">All</a>
                  <a href="/student/payment-due" class="btn btn-primary text-white float-end mt-3">Due</a> -->
                </div>
             </div>
           </div>

            <table id="user" class="table mt-4">
                <thead class="table-dark">
                  <tr>
                      <th>Date </th>
                      <th>Month</th>
                      <th>Attendance</th>
                  </tr>
                </thead>
                <tbody>
                  
                    <% attendance.forEach(data => { %>
                      <tr>
                           <th><%-data.date %></th>
                           <td><%-data.month %></td>
                           <td>
                            <% if(( data.status ) == 'A'){ %>
                                <button class="badge bg-danger text-decoration-none border-0">Absent</button>
                            <%} else {%>
                                <button class="badge bg-success text-decoration-none border-0">Present</button>
                           <% }  %>
                          
                        </td>
                      </tr>
                      <% }) %>
                </tbody>
              </table>
        </div>
    </div>
  </div>
  <script>
      $(document).ready(function() {
    $('#user').DataTable();
} );
  </script>