
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('../side') %>
        </div>
        <div class="col-10">
            <h4 class="mt-3 border-start border-4 px-2">View Classes </h4>

            <table class="table mt-4">
                <thead class="table-dark">
                  <tr>
                      <th>Period</th>
                      <th>Class Name</th>
                      <th>Class Teacher Name</th>
                      <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% period.forEach(data => { %>
                        <tr>
                            <th class="ms-2"> <%-  data.period_name  %></th>
                            <td><%-data.class_name %></td>
                            <td><%-data.role %></td>
                            <td>
                              <!-- <a href="/admin/delete-patient/<%= data._id%> " class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></i></a> -->
                              <a href="/admin/delete-patient/<%= data._id%> " class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></i></a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
              </table>
        </div>
    </div>
  </div>
