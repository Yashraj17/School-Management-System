
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('../side') %>
        </div>
        <div class="col-10" >
            <% if((class_data ==null)){ %>
                <h2>No student found in this class</h2>
       <% } else { %>
            
            <h4 class="mt-3 border-start border-4 px-2"><%-class_data.class_name %> Students Attendance </h4>
            <div class="container">
                <div class="row">
                    <div class="col-3 mx-auto">
                        <div class="card-body">
                            <form action="" method="post">
                                <div class="mb-3">
                                    <label for="">Roll No.</label>
                                    <input type="number" name="" autofocus class="form-control">
                                </div>
                                    <div class="mb-3">
                                        <input type="submit" class="btn btn-primary w-100">
                                    </div>
                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <h4 class="mt-4 text-center"> Mark Attendance <%-class_data.date %></h4>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>Roll No. </th>
                                <th>Student Name</th>
                                <th>Contact</th>
                                <th>Attendance</th>
                            </tr>
                                <% class_data.attendance.forEach(data => { %>
                                  <tr>
                                       <th><%-data.student_id.rollno %></th>
                                       <td><%-data.student_id.name %></td>
                                       <td><%-data.student_id.contact %></td>
                                       <td>
                                        <% if( data.status  === 'A'){ %>
                                            <form action="" method="post">
                                                <input type="hidden" name="student_id" value="<%-data.student_id._id %>">
                                                <!-- <input type="hidden" name="class_name" value="<%-class_data.class_name %> "> -->
                                                <input type="submit" value="Present" class="btn btn-sm btn-success fw-bold">
                                            </form>
                                            <!-- <a href="/admin/present/<%-data._id %> " class="btn btn-sm btn-success fw-bold">Present</a> -->
                                        <%} else {%>
                                            <a href= "" class="badge bg-success text-decoration-none badge-disabled">Done</i></a>
                                       <% }  %>
                                        
                                      </td>
                                      
                                  </tr>
                                  <% }) %>
                                  <% } %>
                        </table>
                    </div>
                
            </div>
        </div>
    </div>
  </div>