
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('side') %>
        </div>
        <div class="col-10">
            <h4 class="mt-3 border-start border-4 px-2">New Admission Request</h4>
            <table class="table mt-4">
                <thead class="table-dark">
                  <tr>
                      <th>Name</th>
                      <th>Father Name</th>
                      <th>Contact</th>
                      <th>DOB</th>
                      <th>Gender</th>
                      <th>Address</th>
                      <th>Applied for Class</th>
                      <th>Approve</th>
                      <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(data => { %>
                        <tr>
                            <td><%-data.name %></td>
                            <!-- <td>
                              <img src="/<%-data.image %>" alt="" style="height: 60px;width: 60px;">
                                </td> -->
                            <td><%-data.father_name %></td>
                            <td><%-data.contact %></td>
                            <td><%-data.dob%></td>
                            <td><%-data.gender%></td>
                            <td><%-data.address%></td>
                            <td><%-data.class_name%></td>
                            <td>
                              <a href= "/admin/approve-admission/<%= data._id%> " class="btn btn-sm btn-warning">Procced</i></a>
                            </td>
                            <td>
                              <a href="/admin/delete-patient/<%= data._id%> " class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></i></a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>