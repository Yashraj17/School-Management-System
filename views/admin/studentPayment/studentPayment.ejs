
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('../side') %>
        </div>
        <div class="col-10">
            
            <h4 class="mt-3 border-start border-4 px-2">Students Payment Details </h4>

            <table id="user" class="table mt-4">
                <thead class="table-dark">
                  <tr>
                      <th>Roll No. </th>
                      <th>Student Name</th>
                      <th>Contact</th>
                      <th>Payment Purpose</th>
                      <th>Due Month</th>
                      <th>Amount</th>
                      <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  
                    <% payment.forEach(data => { %>
                      <tr>
                           <th><%-data.roll_no %></th>
                           <td><%-data.student_name %></td>
                           <td><%-data.contact %></td>
                           <td><%-data.due_month %></td>
                           <td><%-data.payment_purpose %></td>
                           <td><%-data.amount %></td>
                           <td>
                            <a href="/admin/delete-patient/ " class="btn btn-sm btn-success">â‚¹ Pay Now</a>
                           </td>
                      </tr>
                      <% }) %>
                </tbody>
              </table>
        </div>
    </div>
  </div>
  <script>
      $(document).ready(function() {
    $('#user').DataTable();
} );
  </script>